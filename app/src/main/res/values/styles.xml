<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PrefStyle" parent="AppTheme">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextStyleTitle" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textSize">18dp</item>
    </style>

    <style name="TextStyleMedium">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextStyleSmall">
        <item name="android:textSize">12sp</item>
        <item name="android:color">@android:color/secondary_text_light</item>
    </style>

</resources>
